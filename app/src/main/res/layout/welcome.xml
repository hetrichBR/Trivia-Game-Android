<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4b0066"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Thank you for installing this app!  \nMake sure you have an internet connection, so images can be displayed.  To play just pick a category and answer the questions\n -SOreal Studios "
        android:id="@+id/TVwelcome"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/text_color"
        />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imageView2"
        android:src="@mipmap/soreal_icon"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        />

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/bready"
        android:layout_marginTop="30dp"
        android:textColor="#ffffff"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@color/button_color"
        android:text="Ready"
        android:layout_gravity="center_horizontal"
        android:onClick="PlayGame" />
</LinearLayout>